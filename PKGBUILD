pkgname=kdm-theme-bluekdm
pkgver=2.0
pkgrel=1
pkgdesc="A Blue KDM theme"
url=("http://www.kde-look.org/content/show.php?content=46541")
license="GPL"
depends=('kdmtheme')
source=(http://members.chello.pl/s.gawinkowski/pages/download/kdm/BlueKDEKDM.tar.gz)
md5sums=('7588618cba74a2c89d687b4f5f4030e4')

build() {
  cd $startdir/src/
    mkdir -p $startdir/pkg/opt/kde/share/apps/kdm/themes/
    cp -r BlueKDEKDM $startdir/pkg/opt/kde/share/apps/kdm/themes/
        }
        
       
